<form action="/urls" method="POST">
  <div class="mb-3">
    <label for="url" class="form-label"></label>
    <input type="url" class="form-control" id="url" name="url" placeholder="Please enter your URL here" pattern="https://.*" required>
    <button type="submit" class="btn btn-outline-primary my-3"
      style=" min-width: 18rem; --bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: 1.15rem;">Shorten URL</button>
  </div>
</form>